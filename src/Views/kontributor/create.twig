{% extends "layout/layout.twig" %}

{% block content %}
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h4 class="mb-4">üìù Buat Post Baru</h4>

          <form method="POST" action="/kontributor/post" enctype="multipart/form-data">
            <!-- Judul -->
            <div class="mb-3">
              <label for="judul" class="form-label">Judul</label>
              <input type="text" class="form-control" id="judul" name="title" placeholder="Masukkan judul artikel" required>
            </div>

            <!-- Kategori -->
            <div class="mb-3">
              <label for="category_id" class="form-label">Kategori</label>
              <select name="category_id" id="category_id" class="form-select" required>
                <option value="" disabled selected>Pilih kategori</option>
                {% for c in categories %}
                  <option value="{{ c.id }}">{{ c.name }}</option>
                {% endfor %}
              </select>
            </div>

            <!-- Isi -->
            <div class="mb-3">
              <label for="isi" class="form-label">Isi</label>
              <textarea name="content" id="isi" class="form-control" rows="6" placeholder="Tulis konten di sini..." required></textarea>
            </div>

            <!-- Lampiran -->
            <div class="mb-3">
              <label for="attachment" class="form-label">Lampiran (opsional)</label>
              <input type="file" class="form-control" id="attachment" name="attachment">
            </div>

            <!-- Tombol -->
            <div class="text-end">
              <button type="submit" class="btn btn-primary">Simpan Postingan</button>
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
