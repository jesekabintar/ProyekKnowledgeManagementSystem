{% extends "layout/layout.twig" %}

{% block content %}
<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-5 mb-3">Dashboard Knowledge Management</h1>

        {% if message %}
            <div class="alert alert-warning mt-4" role="alert">
                {{ message }}
            </div>
        {% else %}
            <p class="lead">Selamat datang di sistem manajemen pengetahuan.</p>
            <p>Silakan login untuk melanjutkan ke halaman dashboard sesuai peran Anda.</p>
            <a href="/login" class="btn btn-primary mt-3">Login</a>
        {% endif %}
    </div>
</div>
{% endblock %}
