{% extends "layout/layout.twig" %}

{% block content %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Dashboard Admin</h2>
        <span class="text-muted">Selamat datang, <strong>{{ user.username }}</strong></span>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            Daftar Pengguna Aktif
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Username</th>
                        <th scope="col">Role</th>
                        <th scope="col" colspan="2">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    {% for u in users %}
                        <tr>
                            <td>{{ u.id }}</td>
                            <td>{{ u.username }}</td>
                            <td>
                                <span class="badge 
                                    {% if u.role == 'admin' %}bg-danger
                                    {% elseif u.role == 'kontributor' %}bg-success
                                    {% else %}bg-secondary
                                    {% endif %}
                                ">
                                    {{ u.role|capitalize }}
                                </span>
                            </td>
                            <td>
                                <a href="/admin/users/edit/{{ u.id }}" class="btn btn-sm btn-outline-primary">Edit</a>
                           
                                <a href="/admin/delete/{{ u.id }}"
                                   onclick="return confirm('Yakin ingin hapus user ini?')"
                                   class="btn btn-sm btn-outline-danger">
                                   Hapus
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted">Tidak ada pengguna yang terdaftar.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3 d-flex justify-content-end">
        <a href="/admin/kategori-tag" class="btn btn-outline-primary">
            <i class="bi bi-tags"></i> Kelola Kategori & Tag
        </a>
    </div>
</div>
{% endblock %}
