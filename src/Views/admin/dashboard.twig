{% extends "layout/admin-layout.twig" %}

{% block head %}
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <style>
    @media (max-width: 768px) {
      .table-responsive {
        overflow-x: auto;
      }
      .stat-card .card-body {
        text-align: center;
      }
    }

    .card.stat-card {
      transition: transform 0.2s ease;
    }
    .card.stat-card:hover {
      transform: scale(1.02);
    }

    .badge {
      font-size: 0.875rem;
      padding: 0.4em 0.75em;
      border-radius: 1rem;
    }
  </style>
{% endblock %}

{% block content %}
<div class="container-fluid mt-4">

  <!-- Header -->
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
    <h2 class="mb-0">Dashboard Admin</h2>
    <span class="text-muted">Selamat datang, <strong>{{ user.username }}</strong></span>
  </div>

  <!-- Statistik Cards -->
 <div class="statistic-cards">
  <div class="card user">
    <div class="icon"><i class="bi bi-people-fill"></i></div>
    <div class="info">
      <h4>Total Pengguna</h4>
      <p>{{ total_users }}</p>
    </div>
  </div>
  <div class="card post">
    <div class="icon"><i class="bi bi-file-earmark-text"></i></div>
    <div class="info">
      <h4>Total Postingan</h4>
      <p>{{ total_posts }}</p>
    </div>
  </div>
  <div class="card category">
    <div class="icon"><i class="bi bi-folder-fill"></i></div>
    <div class="info">
      <h4>Total Kategori</h4>
      <p>{{ total_categories }}</p>
    </div>
  </div>
</div>


  </div>

  <!-- Filter/Search -->
  <!-- Filter/Search -->
<form method="get" class="search-user-form">
  <input type="text" name="q" placeholder="Cari pengguna..." class="search-input">
  <button type="submit" class="search-button">
    üîç
  </button>
</form>


  <!-- Tabel Pengguna -->
  <div class="card">
  <h3>Daftar Pengguna Aktif</h3>
  <div class="table-wrapper">
    <table class="user-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Username</th>
          <th>Role</th>
          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        {% for user in users %}
          <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.username }}</td>
            <td>{{ user.role }}</td>
            <td>
              <a href="/admin/users/edit/{{ user.id }}" class="btn-edit">Edit</a>
              <a href="/admin/users/delete/{{ user.id }}" class="btn-delete">Hapus</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>


  <!-- Kelola Kategori dan Tag -->
  <div class="mt-4 d-flex justify-content-end">
    <a href="/admin/kategori-tag" class="btn btn-outline-dark">
      <i class="bi bi-tags-fill me-1"></i> Kelola Kategori & Tag
    </a>
  </div>

</div>
{% endblock %}
