<h2>Daftar Pengguna</h2>
<table>
  <thead>
    <tr><th>Username</th><th>Role</th><th>Aksi</th></tr>
  </thead>
  <tbody>
    {% for user in users %}
    <tr>
      <td>{{ user.username }}</td>
      <td>{{ user.role }}</td>
      <td>
        <a href="/admin/users/edit/{{ user.id }}">Edit</a> |
        <a href="/admin/delete/{{ user.id }}" onclick="return confirm('Yakin?')">Hapus</a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
